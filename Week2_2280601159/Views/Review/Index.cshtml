@model List<Week2_2280601159.Models.ReviewPost>

@{
    ViewData["Title"] = "Bài đánh giá sách";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">Viết bài mới</a>

@if (Model != null && Model.Any())
{
    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item">
                <h4>@item.Title</h4>
                <p>@item.Content</p>
                <small><i>Đăng vào: @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</i></small>
            </div>
        }
    </div>
}
else
{
    <p>Chưa có bài đánh giá nào.</p>
}


@model IEnumerable<Week2_2280601159.Models.Product>
@{
    ViewData["ShowBanner"] = true;
}
@{
    ViewData["Title"] = "Home Page";
}
<h2 class="mb-4 text-center text-uppercase fw-bold">SÁCH MỚI</h2>
<div class="book-list">
    @foreach (var item in Model)
    {
        <div class="book">
            <img src="@item.ImageUrl" class="book-img" alt="@item.Name">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="author"><strong>Tác giả:</strong> @item.Author</p>
                <p class="price"><strong>Giá:</strong> @item.Price.000đ</p>
                <div class="button-group">
                    <!-- Nút Chi Tiết đã sửa thành link mở trang -->
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="detail-button">
                        <i class="bi bi-eye"></i> Chi Tiết
                    </a>
                    <form method="post" asp-action="AddToCart" asp-controller="Cart">
                        <input type="hidden" name="productId" value="@item.Id" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="buy-button">
                            <i class="bi bi-cart"></i> Thêm Vào Giỏ
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
